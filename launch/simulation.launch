<launch>
  <arg name="use_sim_time" value="true" />
  <arg name="gui"        default="true"/>
  <arg name="world_file" default="world"/>
  
  <arg name="robot_radius"/>
  <arg name="spiral_delta_denominator" />

  <include file="$(find vacuumcleaner)/launch/robot.launch">
    <arg name="robot_radius" value="$(arg robot_radius)"/>
    <arg name="spiral_delta_denominator" value="$(arg spiral_delta_denominator)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
  </include>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(find vacuumcleaner)/worlds/square_2m"/>
    <arg name="output" default="log"/>
  </include>


  <node name="RVIZ" pkg="rviz" type="rviz" args=" -d $(find vacuumcleaner)/config/config.rviz" />
  <node name="spawn_robot_model" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model vacuumcleaner -x 0 -y 0 -z 0 -R 0.0 -P 0.0 -Y 0.0" />

</launch>

