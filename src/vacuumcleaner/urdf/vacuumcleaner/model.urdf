<?xml version="1.0" encoding="UTF-8"?>
<robot name="vacuumcleaner">
	<link name="vacuumcleaner/base_footprint" />
  <link name="vacuumcleaner/base_link">
    <inertial>
      <mass value="2" />
      <inertia ixx="0.02067" ixy="0" ixz="0" iyy="0.020267" iyz="0" izz="0.04" />
    </inertial>
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.2" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.2" />
      </geometry>
    </collision>
    <collision name="caster_front_collision">
      <origin rpy="0 0 0" xyz="0.15 0 -0.054" />
      <geometry>
        <sphere radius="0.033" />
      </geometry>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy="0 0 0" xyz="0.15 0 -0.054" />
      <geometry>
        <sphere radius="0.033" />
      </geometry>
    </visual>
  </link>
  <link name="vacuumcleaner/link_right_wheel">
    <inertial>
      <mass value="0.1" />
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <inertia ixx="2.9925e-5" ixy="0" ixz="0" iyy="2.9925e-5" iyz="0" izz="5.4450e-5" />
    </inertial>
    <collision name="link_right_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.018" radius="0.033" />
      </geometry>
    </collision>
    <visual name="link_right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.018" radius="0.033" />
      </geometry>
    </visual>
  </link>
  <gazebo reference="vacuumcleaner/link_right_wheel">
    <mu1>100000</mu1>
    <mu2>100000</mu2>
    <kp>1e5</kp>
    <material>Gazebo/Black</material>
  </gazebo>
  <link name="vacuumcleaner/link_left_wheel">
    <inertial>
      <mass value="0.1" />
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <inertia ixx="2.9925e-5" ixy="0" ixz="0" iyy="2.9925e-5" iyz="0" izz="5.4450e-5" />
    </inertial>
    <collision name="link_left_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.018" radius="0.033" />
      </geometry>
    </collision>
    <visual name="link_left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.018" radius="0.033" />
      </geometry>
    </visual>
  </link>
  <gazebo reference="vacuumcleaner/link_left_wheel">
    <mu1>100000</mu1>
    <mu2>100000</mu2>
    <kp>1e5</kp>
    <material>Gazebo/Black</material>
  </gazebo>
  <joint name="vacuumcleaner/joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.02 -0.10 -0.054" />
    <child link="vacuumcleaner/link_right_wheel" />
    <parent link="vacuumcleaner/base_link" />
    <axis rpy="0 0 0" xyz="0 1 0" />
    <limit effort="10000" velocity="1000" />
  </joint>
  <joint name="vacuumcleaner/joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.02 0.10 -0.054" />
    <child link="vacuumcleaner/link_left_wheel" />
    <parent link="vacuumcleaner/base_link" />
    <axis rpy="0 0 0" xyz="0 1 0" />
    <limit effort="10000" velocity="1000" />
  </joint>
  <joint name="vacuumcleaner/base_joint" type="fixed">
    <parent link="vacuumcleaner/base_footprint" />
    <child link="vacuumcleaner/base_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <gazebo>
    <plugin name="differential_drive" filename="libgazebo_ros_diff_drive.so">
      <rosDebugLevel>na</rosDebugLevel>	     
      <updateRate>30</updateRate>
      <leftJoint>vacuumcleaner/joint_left_wheel</leftJoint>
      <rightJoint>vacuumcleaner/joint_right_wheel</rightJoint>
      <wheelSeparation>0.2</wheelSeparation>
      <wheelDiameter>0.066</wheelDiameter>
      <wheelTorque>20</wheelTorque>
      <wheelAcceleration>1</wheelAcceleration>
      <commandTopic>cmd_vel</commandTopic>
      <publishOdom>true</publishOdom>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelTF>false</publishWheelTF>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <updateRate>30</updateRate>
      <jointName>vacuumcleaner/joint_left_wheel, vacuumcleaner/joint_right_wheel</jointName>
    </plugin>
  </gazebo>
  <link name="vacuumcleaner/base_scan">
    <visual>
      <geometry>
        <sphere radius="0.05" />
      </geometry>
      <material name="white" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.05" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
    </inertial>
  </link>
  <joint name="vacuumcleaner/base_scan_joint" type="fixed">
    <child link="vacuumcleaner/base_scan" />
    <parent link="vacuumcleaner/base_link" />
    <origin xyz="0 0 0.051" />
    <!-- +0.051 iso 0.05 otherwise vision clips into top of robot-->
  </joint>
  <gazebo reference="vacuumcleaner/base_scan">
    <sensor name="raycaster" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1.000000</resolution>
            <min_angle>0.000000</min_angle>
            <max_angle>6.280000</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.120000</min>
          <max>3.5</max>
          <resolution>0.015000</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="laserscan" filename="libgazebo_ros_laser.so">
	<topicName>scan</topicName>
	<frameName>vacuumcleaner/base_scan</frameName>
      </plugin>
   </sensor>
  </gazebo>
</robot>
